# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=iMarket_backend
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Email Settings (for Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
# Use an App Password if you have 2FA enabled
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=iMarket <your-email@gmail.com>

# Twilio Settings (for SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True

# Google Maps API (for external navigation)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox API (alternative for external navigation)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# JWT Token Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Navigation Settings
DEFAULT_NAVIGATION_RADIUS_METERS=100
MAX_NAVIGATION_RADIUS_METERS=1000
INDOOR_NAVIGATION_ENABLED=True
OUTDOOR_NAVIGATION_ENABLED=True

# File Upload Settings
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
